{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vite/client", "vitest"],
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "hydraulic-designer/router": ["resources/ts/router.tsx"],
      "hydraulic-designer/pages/*": ["resources/ts/pages/hydraulic-designer/*"]
    }
  },
  "include": ["resources/ts", "resources/ts/**/*.d.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
